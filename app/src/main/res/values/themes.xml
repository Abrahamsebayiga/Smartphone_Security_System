<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PDSafe256" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary" >@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
</style>
    <!-- night mode switch -->
<style name="nightModeSwitch" parent="Theme.AppCompat.Light">
<item name="colorControlActivated">@color/night_mode</item>
<item name="colorSwitchThumbNormal">@color/white</item>
<item name="android:foreground">#99FFFFFF</item>
</style><!-- notification switch -->

<style name="notificationsSwitch" parent="Theme.AppCompat.Light">
<item name="colorControlActivated">@color/notifications</item>
<item name="colorSwitchThumbNormal">@color/white</item>
<item name="android:foreground">#99FFFFFF</item>
</style><!-- private account switch -->

<style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
<item name="colorControlActivated">@color/private_account</item>
<item name="colorSwitchThumbNormal">@color/white</item>
<item name="android:foreground">#99FFFFFF</item>
</style><!--  security switch -->

<style name="securitySwitch" parent="Theme.AppCompat.Light">
<item name="colorControlActivated">@color/security</item>
<item name="colorSwitchThumbNormal">@color/white</item>
<item name="android:foreground">#99FFFFFF</item>
</style>

<style name="Theme.PDSafe256.NoActionBar">
<item name="windowActionBar">false</item>
<item name="windowNoTitle">true</item>
</style>
<style name="Theme.PDSafe256.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
<style name="Theme.PDSafe256.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="Theme.PDSafe256" parent="Base.Theme.PDSafe256" />
  </resources>